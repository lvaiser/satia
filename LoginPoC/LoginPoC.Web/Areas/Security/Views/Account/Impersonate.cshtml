@model LoginPoC.Web.Areas.Common.Models.UserViewModel

@{
    ViewBag.Title = "Impersonar Usuario";
}
<h2 class="tituloPrincipal">@ViewBag.Title</h2>
<hr class="tituloPrincipal" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <p>Ingrese el correo de un usuario del sistema para acceder </p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2 control-label">Correo</div>
            <!--@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })-->
            <div class="col-md-4">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Impersonar" class="btn btn-default" />
            </div>
            <div class="col-md-2">
                <a class="btn btn-secondary" href="@Url.Action("Index", "Home", new {area = "Common"})">Volver</a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
